<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B8B8B8" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/block">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/color_dark_000000_ffffff"
        android:textSize="20sp"
        android:hint="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="@id/block"
        app:layout_constraintEnd_toEndOf="@id/block"
        app:layout_constraintBottom_toBottomOf="@+id/block"
        android:background="@color/base_grey" />



</androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>
