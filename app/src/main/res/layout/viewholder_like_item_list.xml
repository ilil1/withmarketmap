<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/likeItemImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/home_item_image_information_background"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/likeItemDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:src="@drawable/ic_baseline_clear_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/likeItemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/likeItemImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="item title" />

    <TextView
        android:id="@+id/likeItemMarketAndDistanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/likeItemDiscountTextView"
        app:layout_constraintStart_toEndOf="@id/likeItemImageView"
        app:layout_constraintTop_toBottomOf="@id/likeItemNameTextView"
        tools:text="market title | 2.0km" />

    <TextView
        android:id="@+id/likeItemDiscountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/ambient_red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/likeItemImageView"
        tools:text="16%" />

    <TextView
        android:id="@+id/likeItemPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/likeItemDiscountTextView"
        tools:text="16,000ì›" />


</androidx.constraintlayout.widget.ConstraintLayout>