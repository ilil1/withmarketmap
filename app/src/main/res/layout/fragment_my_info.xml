<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TODO: Update blank fragment layout -->

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15dp"

                    android:src="@drawable/left_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="내 정보"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--                <androidx.appcompat.widget.Toolbar-->
                <!--                    android:id="@+id/toolbar"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:elevation="0dp"-->
                <!--                    android:fitsSystemWindows="false"-->
                <!--                    android:gravity="center"-->
                <!--                    app:contentInsetEnd="0dp"-->
                <!--                    app:contentInsetStart="0dp"-->
                <!--                    app:layout_constraintLeft_toLeftOf="parent"-->
                <!--                    app:layout_constraintRight_toRightOf="parent"-->
                <!--                    app:layout_constraintTop_toTopOf="parent">-->


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:layout_constraintBottom_toBottomOf="@id/profile"
                    app:layout_constraintStart_toStartOf="@id/profile"
                    app:layout_constraintTop_toTopOf="@id/profile" />

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:layout_toEndOf="@+id/profile_image"
                    android:hint="NickName"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/profile_image"
                    app:layout_constraintEnd_toEndOf="@id/profile"
                    app:layout_constraintStart_toEndOf="@id/profile_image"

                    app:layout_constraintTop_toTopOf="@id/profile_image" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.1"
                android:background="@color/grey" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayoutaccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="18dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_order"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/orderlist"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/order_review"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/review"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/heart"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/heart"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/category"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/category"
                            android:layout_weight="1"/>


                    </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="18dp"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/order_list_text"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/color_dark_ffffff_000000"
                                android:gravity="center"
                                android:text="주문목록"
                                android:textColor="@color/color_dark_000000_ffffff" />

                            <TextView
                                android:id="@+id/reviewTextView"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/color_dark_ffffff_000000"
                                android:gravity="center"
                                android:text="리뷰 관리"
                                android:textColor="@color/color_dark_000000_ffffff" />

                            <TextView
                                android:id="@+id/heart_text"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/color_dark_ffffff_000000"
                                android:gravity="center"
                                android:text="찜 관리"
                                android:textColor="@color/color_dark_000000_ffffff" />


                            <TextView
                                android:id="@+id/category_text"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/color_dark_ffffff_000000"
                                android:gravity="center"
                                android:text="관심 카테고리"
                                android:textColor="@color/color_dark_000000_ffffff" />


                        </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.1"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="10dp"
                            android:text="계정"
                            android:textColor="@color/color_dark_000000_ffffff"
                            android:textSize="30sp"
                            />

                        <TextView
                            android:id="@+id/address_chagne_textview"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="18dp"
                            android:backgroundTint="@color/color_dark_ffffff_000000"
                            android:gravity="center_vertical"
                            android:text="주소 재설정"
                            android:textColor="@color/color_dark_000000_ffffff"
                            android:textSize="15sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="18dp"
                            android:backgroundTint="@color/color_dark_ffffff_000000"
                            android:gravity="center_vertical"
                            android:text="로그아웃"
                            android:textColor="@color/color_dark_000000_ffffff"
                            android:textSize="15sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_weight="0.1"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="10dp"
                            android:text="앱 설정"
                            android:textColor="@color/color_dark_000000_ffffff"
                            android:textSize="30dp"
                          />


                        <TextView
                            android:id="@+id/notice_text"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:backgroundTint="@color/color_dark_ffffff_000000"
                            android:gravity="center_vertical"
                            android:text="알림설정"
                            android:textColor="@color/color_dark_000000_ffffff"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/setting"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:backgroundTint="@color/color_dark_ffffff_000000"
                            android:gravity="center_vertical"
                            android:text="환경설정"
                            android:textColor="@color/color_dark_000000_ffffff"
                            android:textSize="15dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_weight="0.1"
                        android:background="@color/grey" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="10dp"
                            android:text="이용 안내"
                            android:textColor="@color/color_dark_000000_ffffff"
                            android:textSize="30dp"
                             />

                        <TextView
                            android:id="@+id/center_textview"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="18dp"
                            android:backgroundTint="@color/color_dark_ffffff_000000"
                            android:gravity="center_vertical"
                            android:text="고객센터"
                            android:textColor="@color/color_dark_000000_ffffff"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/terms"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="18dp"
                            android:backgroundTint="@color/color_dark_ffffff_000000"
                            android:gravity="center_vertical"
                            android:text="이용약관"
                            android:textColor="@color/color_dark_000000_ffffff"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/personal_textview"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:backgroundTint="@color/color_dark_ffffff_000000"
                            android:gravity="center_vertical"
                            android:text="개인정보 처리 방침"
                            android:textColor="@color/color_dark_000000_ffffff"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>